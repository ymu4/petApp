<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PetApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/sum</item>
        <item name="android:windowBackground">@color/black</item>
        <!-- You can add more customizations for the dark theme here -->
        <item name="buttonStyle">@style/MyButtonStyle</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <!-- Set background color for buttons -->
        <item name="android:background">@color/sum</item>
    </style>
    <style name="Theme.PetApp" parent="Base.Theme.PetApp" />
</resources>
